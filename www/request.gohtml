<html>
  <head>
  	{{ template "sources.gohtml" }}
  </head>
  <body class="d-flex flex-column h-100">
    <header>
      {{ template "header.gohtml" }}
    </header>
    <main class="container" role="main">
      <div class="container page-name">
        <h1 class="d-flex align-items-center">
          New request
          <div id="loader" class="spinner-border ml-auto text-primary" style="font-size:1rem;" role="status" aria-hidden="true"></div>
        </h1>
			</div>
			<div class="container">
        <div class="card-icon">
          <img id="icon" src="/static/logo.png" class="img-fluid" alt="icon">
        </div>
				<form method="POST" id="template" action="/api/v1/cart/add">
					<div class="form-group">
						<label for="template_id">Template ID</label>
						<input form="template" class="form-control" name="template_id" id="template_id" type="text" readonly="true" value="{{ .TemplateID }}"><br />
					</div>
          <div class="form-group">
						<label for="request_id">Request ID</label>
						<input form="template" class="form-control" id="request_id" type="text" readonly="true" value="{{ .ID }}"><br />
					</div>
					<div class="form-group">
						<label for="name">Name</label><br />
						<input form="template" class="form-control" name="name" id="name" type="text" readonly="true" value=""><br />
					</div>
					<div class="form-group">
						<label for="description">Description</label><br />
						<input form="template" class="form-control" name="description" id="description" type="text" readonly="true" value=""><br />
					</div>
          <div class="container page-name">
    				<h4>Survey variables</h4>
    			</div>
          <div class="form-group">
						<label for="request_reason">Request reason</label><br />
            <textarea form="template" class="form-control" name="request_reason" id="request_reason" rows="3" required="true"></textarea>
					</div>
          <div class="form-group" id="survey_parameters">
          <!-- survey templating here -->
          </div>
				</form>
			</div>
			<div class="form-inline text-center form-inline-block">
        <button type="submit" form="template" class="btn btn-primary">Add to cart</button>
			</div>
      <template id="multiplechoice">
        <div class="form-group">
          <label id="question_name" for="choices">question name</label>
          <select class="form-control" id="choices" name="var">
            <option value="">Please choose an option</option>
            <!-- options for each -->
          </select>
          <small id="question_description" class="form-text text-muted">
            description
          </small>
        </div>
      </template>
      <template id="multiselect">
        <div class="form-group">
          <label id="question_name" for="choices">question name</label>
          <br>
          <!-- choices for each -->
          <div id="choices" class="form-check form-check-inline">
          </div>
          <small id="question_description" class="form-text text-muted">
            description
          </small>
        </div>
      </template>
      <template id="text">
        <div class="form-group">
          <label id="question_name" for="variable">question name</label>
          <div class="input-group">
            <input type="text" name="var" class="form-control" value="" />
            <!-- when regex -->
            <div class="input-group-append">
              <span class="input-group-text"></span>
            </div>
          </div>
          <small id="question_description" class="form-text text-muted">
            description
          </small>
        </div>
      </template>
      <template id="textarea">
        <div class="form-group">
          <label id="question_name" for="variable">question name</label>
          <div class="input-group">
            <textarea type="text" id="var" name="var" class="form-control" aria-describedby="var-description" required="true" pattern="regex" aria-describedby="var-append" value="default" ></textarea>
            <!-- when regex -->
            <div class="input-group-append">
              <span class="input-group-text" id="var-append">Pattern: regex</span>
            </div>
          </div>
          <small id="question_description" class="form-text text-muted">
            description
          </small>
        </div>
      </template>
      <template id="password">
        <div class="form-group">
          <label id="question_name" for="variable">question name</label>
          <div class="input-group">
            <input type="password" id="var" name="var" class="form-control" aria-describedby="var-description" required="true" pattern="regex" aria-describedby="var-append" value="default" />
            <!-- when regex -->
            <div class="input-group-append">
              <span class="input-group-text" id="var-append">Pattern: regex</span>
            </div>
          </div>
          <small id="question_description" class="form-text text-muted">
            description
          </small>
        </div>
      </template>
      <template id="integer">
        <div class="form-group">
          <label id="question_name" for="variable">question name</label>
          <input type="number" id="var" name="var" min="min" max="max" class="form-control" aria-describedby="var-description" required="true" value="default" />
          <small id="question_description" class="form-text text-muted">
            description
          </small>
        </div>
      </template>
      <template id="float">
          <div class="form-group">
          <label id="question_name" for="variable">question name</label>
          <input type="number" id="var" name="var" placeholder="1.0" step="0.01" min="min" max="max" class="form-control" aria-describedby="var-description" required="true" value="default" />
          <small id="question_description" class="form-text text-muted">
            description
          </small>
        </div>
      </template>
		</main>

  <footer class="footer mt-auto py-3">
    {{ template "footer.gohtml" }}
  </footer>
  <script src="/static/js/request.js"></script>
</html>
