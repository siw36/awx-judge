<html>
  <head>
  	{{ template "sources.gohtml" }}
  </head>
  <body class="d-flex flex-column h-100">
    <header>
      {{ template "header.gohtml" }}
    </header>

    <main class="container" role="main">
      <div class="container page-name">
        <h1 class="d-flex align-items-center">
          AWX job templates
          <div id="loader" class="spinner-border ml-auto text-primary" style="font-size:1rem;" role="status" aria-hidden="true"></div>
        </h1>
      </div>
      <div class="alert alert-primary" role="alert">
        Re-import job templates if you have changed the survey parameters in AWX/Tower.
      </div>

		  <table class="table table-striped table-hover">
        <thead class="thead-dark">
  				<tr>
  			    <th scope="col">ID</td>
  			    <th scope="col">Name</td>
  					<th scope="col">Description</td>
  					<th scope="col">Actions</td>
  			  </tr>
  			</thead>
        <tbody>
          <!--Dynamically filled by HTML5 template-->
        </tbody>
		  </table>
      <template id="import_item_template">
        <tr>
          <td id="import_id"></td>
          <td id="import_name"></td>
          <td id="import_description"></td>
          <td class="text-center" style="white-space: nowrap">
            <button disabled type="submit" id="import_button_delete" data-template_id="" class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="Delete imported version"><i class="fas fa-trash-alt"></i></button>
            <button type="submit" id="import_button" form="" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Import"><i id="import_button_icon"class="fas fa-file-import"></i></button>
            <form id="" action="/template-import-form" method="POST" style="display:none;">
              <input id="import_form_id" name="import_form_id" value="" hidden="true"></input>
            </form>
          </td>
        </tr>

      </template>
		</main>

  <footer class="footer mt-auto py-3">
    {{ template "footer.gohtml" }}
  </footer>
  <script src="/static/js/import.js"></script>
</html>
