<html>
  <head>
  	{{ template "sources.gohtml" }}
  </head>
  <body class="d-flex flex-column h-100">
    <header>
      {{ template "header.gohtml" }}
    </header>

    <main class="container" role="main">
      <div class="container page-name">
				<h1>Request job template</h1>
			</div>
			<div class="container">
        <div class="card-icon">
          {{ if eq .Survey.Icon "" }}
          <img src="/static/logo.png" class="img-fluid" alt="icon">
          {{ else }}
          <img src="{{ .Survey.Icon }}" class="img-fluid" alt="icon">
          {{ end }}
        </div>
				<form method="POST" id="template" action="/cart-edit">
          {{ if .ID }}
          <div class="form-group">
						<label for="request_id">ID</label>
						<input form="template" class="form-control" name="request_id" id="request_id" type="text" readonly="true" value="{{ if .ID }}{{ .ID }}{{ else }}null{{ end }}"><br />
					</div>
          {{ end }}
					<div class="form-group">
						<label for="template_id">Template ID</label>
						<input form="template" class="form-control" name="template_id" id="template_id" type="text" readonly="true" value="{{ if eq .Survey.ID "" }}null{{ else }}{{ .Survey.ID }}{{ end }}"><br />
					</div>
					<div class="form-group">
						<label for="name">Name</label><br />
						<input form="template" class="form-control" name="name" type="text" readonly="true" value="{{ if eq .Survey.Name "" }}null{{ else }}{{ .Survey.Name }}{{ end }}"><br />
					</div>
					<div class="form-group">
						<label for="description">Description</label><br />
						<input form="template" class="form-control" name="description" type="text" readonly="true" value="{{ if eq .Survey.Description "" }}null{{ else }}{{ .Survey.Description }}{{ end }}"><br />
					</div>
          <div class="container page-name">
    				<h4>Survey variables</h4>
    			</div>
          <div class="form-group">
						<label for="request_reason">Request reason</label><br />
            <textarea form="template" class="form-control" name="request_reason" id="request_reason" rows="3" required="true">{{ .RequestReason }}</textarea>
					</div>
          {{ range $spec := .Survey.Spec }}
          <div class="form-group">
            <label for="{{ $spec.Variable }}">{{ $spec.QuestionName }}</label>
            {{ if eq $spec.Type "multiplechoice" }}
            <select class="form-control" id="{{ $spec.Variable }}" name="{{ $spec.Variable }}">
              {{ range $choice := StringsSplit $spec.Choices "\n" }}
              <option {{ if eq $choice $spec.Value }}selected{{ end }}>{{ $choice }}</option>
              {{ end }}
            </select>
            {{ end }}
            {{ if eq $spec.Type "multiselect" }}
              {{ range $choice := StringsSplit $spec.Choices "\n" }}
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="{{ $spec.Variable }}" name="{{ $spec.Variable }}" value="{{ $choice }}" {{ if eq $choice $spec.Value }}checked{{ end }}>
                <label class="form-check-label" for="{{ $spec.Variable }}">{{ $choice }}</label>
              </div>
              {{ end }}
            {{ end }}
            {{ if eq $spec.Type "text" }}
            <div class="input-group">
              <input type="text" id="{{ $spec.Variable }}" name="{{ $spec.Variable }}" class="form-control" aria-describedby="{{ $spec.Variable }}-description" {{ if $spec.Required }}required="true"{{ end }} {{ if $spec.RegEx }}pattern="{{ $spec.RegEx }}" aria-describedby="{{ $spec.Variable }}-append"{{ end }} {{ if $spec.Value }}value="{{ $spec.Value }}"{{ end }} />
              {{ if $spec.RegEx }}
              <div class="input-group-append">
                <span class="input-group-text" id="{{ .Variable }}-append">Pattern: {{ $spec.RegEx }}</span>
              </div>
              {{ end }}
            </div>
            {{ end }}
            {{ if eq $spec.Type "textarea" }}
            <div class="input-group">
              <textarea type="text" id="{{ $spec.Variable }}" name="{{ $spec.Variable }}" class="form-control" aria-describedby="{{ $spec.Variable }}-description" {{ if $spec.Required }}required="true"{{ end }} {{ if $spec.RegEx }}pattern="{{ $spec.RegEx }}" aria-describedby="{{ $spec.Variable }}-append"{{ end }} {{ if $spec.Value }}value="{{ $spec.Value }}"{{ end }} ></textarea>
              {{ if $spec.RegEx }}
              <div class="input-group-append">
                <span class="input-group-text" id="{{ $spec.Variable }}-append">Pattern: {{ $spec.RegEx }}</span>
              </div>
              {{ end }}
            </div>
            {{ end }}
            {{ if eq $spec.Type "password" }}
            <div class="input-group">
              <input type="password" id="{{ $spec.Variable }}" name="{{ $spec.Variable }}" class="form-control" aria-describedby="{{ $spec.Variable }}-description" {{ if $spec.Required }}required="true"{{ end }} {{ if $spec.RegEx }}pattern="{{ $spec.RegEx }}" aria-describedby="{{ $spec.Variable }}-append"{{ end }}  {{ if $spec.Value }}value="{{ $spec.Value }}"{{ end }} />
              {{ if $spec.RegEx }}
              <div class="input-group-append">
                <span class="input-group-text" id="{{ $spec.Variable }}-append">Pattern: {{ $spec.RegEx }}</span>
              </div>
              {{ end }}
            </div>
            {{ end }}
            {{ if eq $spec.Type "integer" }}
            <input type="number" id="{{ $spec.Variable }}" name="{{ $spec.Variable }}" min="{{ $spec.Min }}" max="{{ $spec.Max }}" class="form-control" aria-describedby="{{ $spec.Variable }}-description" {{ if $spec.Required }}required="true"{{ end }} {{ if $spec.Value }}value="{{ $spec.Value }}"{{ end }} />
            {{ end }}
            {{ if eq $spec.Type "float" }}
            <input type="number" id="{{ $spec.Variable }}" name="{{ $spec.Variable }}" placeholder="1.0" step="0.01" min="{{ $spec.Min }}" max="{{ $spec.Max }}" class="form-control" aria-describedby="{{ $spec.Variable }}-description" {{ if $spec.Required }}required="true"{{ end }} {{ if $spec.Value }}value="{{ $spec.Value }}"{{ end }} />
            {{ end }}
            <small id="{{ $spec.Variable }}-description" class="form-text text-muted">
              {{ $spec.QuestionDescription }}
            </small>
          </div>
          {{ end }}
				</form>
			</div>
      <div class="form-inline text-center form-inline-block">
        <button type="submit" form="template" class="btn btn-primary">Update request</button>
			</div>
		</main>

  <footer class="footer mt-auto py-3">
    {{ template "footer.gohtml" }}
  </footer>
</html>
